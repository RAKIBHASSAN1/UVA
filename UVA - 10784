#include <bits/stdc++.h>
using namespace std ;
int main()
{
long n,i=1,x;
while(scanf("%ld",&n)==1)
  {
     if(n==0)
      {
     break;
      }
     else
      {
           double a = 1.0, b = -3.0, c = -2 * n;
         x = ceil((-b + pow(b * b - 4 * a * c, 0.5)) / (2 * a));
     // x=ceil((3+sqrt(9+8*n))/2);
      cout<<"Case "<<i<<": "<<x<<endl;
      i++;
      }

   }
}
